<% if edit %>
    <% bollocks = cat_url(cat) %>
    <% button_text = "edit cat" %>
<% else %>
    <% bollocks = cats_url %>
    <% button_text = "new cat" %>
<% end %>

<form action="<%= bollocks %>" method="POST">

    <% if edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <label for="cat_name">Name: </label>
    <input id="cat_name" type="text" name="cat[name]" value="<%= cat.name %>">
    
    <label for="cat_birth_date">Birthday: </label>
    <input id="cat_birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
    
    <label for="cat_color">Color: </label>
    <input id="cat_color" type="text" name="cat[color]"  value="<%= cat.color %>">

    <label for="cat_sex">Sex: </label>
    <select name="cat[sex]" id="cat_sex">
        <option disabled <%= cat.sex ? "" : "selected" %>>--</option>
        <option value="M" <%= cat.sex == "M" ? "selected" : "" %>>M</option>
        <option value="F" <%= cat.sex == "F" ? "selected" : "" %>>F</option>
    </select>

    <label for="cat_description">Description: </label>
    <textarea name="cat[description]" id="cat_description" cols="2" rows="2"><%= cat.description %></textarea>

    <input type="submit" value="<%= button_text %>">
</form>